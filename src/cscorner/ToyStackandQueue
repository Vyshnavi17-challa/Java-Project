package cscorner;

import java.util.Stack;
import java.util.LinkedList;
import java.util.Queue;

public class ToyStackandQueue {

    public static void main(String[] args) {
        Stack<String> toyBox = new Stack<>();
        toyBox.push("Ball");
        toyBox.push("Blocks");
        toyBox.push("Puzzle");
        System.out.println("Toys in the toy box: " + toyBox);
        String currentToy = toyBox.pop();
        System.out.println("Toy being played with: " + currentToy);
        System.out.println("Toys left in the toy box: " + toyBox);
        Queue<String> kidsLine = new LinkedList<>();
        kidsLine.add("Vyshu");
        kidsLine.add("Saru");

        System.out.println("Kids waiting in line: " + kidsLine);
        String kid = kidsLine.poll();
        System.out.println(kid + " gets to play with a toy next!");
    }
}
